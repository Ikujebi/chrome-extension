  "icons": {
    "16": "./src/images/Layer 1.png",
    "32": "./src/images/Layer 1.png",
    "120": "./src/images/Layer 1.png"
  },
  
  "action": {
    "default_popup":"index.html",
    "icon":{
      "16": "./src/images/Layer 1.png",
      "32": "./src/images/Layer 1.png",
      "120": "./src/images/Layer 1.png"
     
  }},

  "host_permissions":[
    "http://*/",
    "https://*/"
    
  ],

    "permissions": ["desktopCapture","storage"],

    "version": "1.0.0",

    "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
  }
  